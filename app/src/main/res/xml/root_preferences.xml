<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Travel Info">

        <EditTextPreference
            app:key="userName"
            app:title="Your name"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Themes">

        <SwitchPreference
            android:defaultValue="false"
            android:key="dark_mode_switch"
            android:summaryOff="Reload app to see changes"
            android:summaryOn="Reload app to see changes"
            android:title="Dark Mode" />

    </PreferenceCategory>

</PreferenceScreen>