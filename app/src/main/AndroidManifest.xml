<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.wallawalla.cs.pricqu.travelapp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TravelApp">
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".CityListActivity"
            android:label="@string/title_city_list"
            android:theme="@style/Theme.TravelApp.NoActionBar" />
        <activity
            android:name=".CityDetailActivity"
            android:label="@string/title_city_detail"
            android:parentActivityName=".CityListActivity"
            android:theme="@style/Theme.TravelApp.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.wallawalla.cs.pricqu.travelapp.CityListActivity" />
        </activity>
        <activity android:name=".Activity2" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensor"
            android:configChanges="uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>